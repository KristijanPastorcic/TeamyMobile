<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/first_name_key"
        android:title="First name"
        android:summary="Enter your first name" />

    <EditTextPreference
        android:key="@string/last_name_key"
        android:title="@string/last_name"
        android:summary="Enter your last name" />

    <ListPreference
        android:key="@string/language_key"
        android:title="@string/language"
        android:summary="@string/chose_language"
        android:entries="@array/languages"
        android:entryValues="@array/language_values"
        android:defaultValue="2"/>

</PreferenceScreen>